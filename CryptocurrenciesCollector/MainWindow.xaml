<Window x:Class="CryptocurrenciesCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:CryptocurrenciesCollector"
        mc:Ignorable="d"
        Title="MainWindow" 
        ResizeMode="NoResize"
        Height="600" Width="920"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="#272537"
            CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Cryptocurrencies"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="20 0 0 0"
                       FontSize="22"
                       FontFamily="Comic Sans MS"
                       Foreground="White"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" 
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Detail Info" 
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>     
                <RadioButton Content="Search" 
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding SearchText}"
                         Height="40"
                         Width="250"
                         HorizontalAlignment = "Left"
                         VerticalAlignment="Center"
                         Grid.Column="0"
                         Style="{StaticResource TextboxTheme}"/>
                <Button Content="🔍" Width="40" Height="40" 
                        VerticalAlignment="Top"
                        Grid.Column="1"
                        Command="{Binding GetSearchedCryptocurrenciesCommand}"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Top 10"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0 15 0 0"
                           Grid.Row="0" Grid.Column="0" 
                           FontSize="18" Foreground="White" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                <ListView ItemsSource="{Binding TopCryptocurrencies}"
                           SelectedItem="{Binding SelectedTopCryptocurrency, Mode=TwoWay}"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0 50 0 15"
                           Grid.Row="0" Grid.Column="0"
                           Grid.RowSpan="2">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Rank" DisplayMemberBinding="{Binding Rank}" Width="150"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Frame x:Name="BaseFrame" 
                       Margin="15 15 15 15"
                       Grid.RowSpan="2" Grid.Row="0" Grid.Column="1"/>
            </Grid>

           
        </Grid>
    </Border>
    

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetAssetsCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

</Window>