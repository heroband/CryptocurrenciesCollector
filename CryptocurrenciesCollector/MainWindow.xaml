<Window x:Class="CryptocurrenciesCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:CryptocurrenciesCollector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Top 10 Cryptocurrencies"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0 15 0 0"
                   Grid.Row="0" Grid.Column="0" 
                   FontSize="18" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <ListView ItemsSource="{Binding TopCryptocurrencies}"
                  SelectedItem="{Binding SelectedTopCryptocurrency, Mode=TwoWay}"
                  HorizontalAlignment="Center" VerticalAlignment="Top"
                  Margin="0 50 0 0"
                  Grid.RowSpan="3" Grid.Column="0"
                  MaxHeight="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rank" DisplayMemberBinding="{Binding Rank}" Width="150"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Grid Grid.Row="0" Grid.Column="1" Margin="0 15 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchTextBox" 
                     Text="{Binding SearchText}"
                     Height="30"
                     VerticalAlignment="Top"
                     Grid.Column="0"/>
            
            <Button Content="🔍" Width="30" Height="30" 
                    VerticalAlignment="Top"
                    Grid.Column="1"
                    Command="{Binding SearchCommand}"/>
        </Grid>

        <Frame x:Name="BaseFrame" 
               Margin="15"
               Grid.RowSpan="2" Grid.Row="1" Grid.Column="1" Background="AliceBlue"/>
    </Grid>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetAssetsCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

</Window>