<Window x:Class="CryptocurrenciesCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptocurrenciesCollector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Load Assets" 
                Command="{Binding GetCryptocurrencyByIdCommand}" Width="150" Height="50" Grid.Column="0" Grid.Row="0">
        </Button>
        <ComboBox ItemsSource="{Binding Cryptocurrencies}"
                  SelectedItem="{Binding CryptocurrencyId}"
                  HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="120">
        </ComboBox>

    </Grid>
</Window>
