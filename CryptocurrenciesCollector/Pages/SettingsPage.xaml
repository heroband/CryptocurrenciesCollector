<Page x:Class="CryptocurrenciesCollector.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptocurrenciesCollector.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Dark" 
                     IsChecked="True"
                     Width="100"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource SettingsMenuButtonTheme}"/>
                <RadioButton Content="White" 
                     Width="100"
                     IsChecked="False"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource SettingsMenuButtonTheme}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="English" 
                     Width="100"
                             
                     IsChecked="True"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource SettingsMenuButtonTheme}"/>
                <RadioButton Content="Українська" 
                     Width="100"
                     IsChecked="False"
                     Height="50"
                     Foreground="White"
                     FontSize="14"
                     Style="{StaticResource SettingsMenuButtonTheme}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
